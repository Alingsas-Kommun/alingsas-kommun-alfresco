          <type>d:int</type>
          <mandatory>false</mandatory>
        </property>
        <property name="akdm:byggRedaRecordNumber">
          <title>Record number</title>
          <type>d:text</type>
          <mandatory>false</mandatory>
        </property>
        <property name="akdm:byggRedaBuildingDescription">
          <title>Building description</title>
          <type>d:text</type>
