<?xml version='1.0' encoding='UTF-8'?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- Bean configurations for DD Migration script -->
	<bean
		id="webscript.se.alingsas.alfresco.repo.scripts.migration.ddmigration.get"
		class="se.alingsas.alfresco.repo.scripts.Migrate" parent="webscript">
		<property name="baseFolder" value="${ddmigration.baseFolder}" />
	</bean>
	
	<!-- Bean configurations for User Homes Linking script -->
	<bean
		id="webscript.se.alingsas.alfresco.repo.scripts.userhome.link.get"
		class="se.alingsas.alfresco.repo.scripts.LinkUserHome" parent="webscript">
	</bean>
	
	<!-- Bean configurations for ByggRedaImpor script -->
	<bean
		id="webscript.se.alingsas.alfresco.repo.scripts.byggreda.import.post"
		class="se.alingsas.alfresco.repo.scripts.ByggRedaImport" parent="webscript">
		<property name="serviceRegistry" ref="ServiceRegistry" />
		<property name="siteName" value="${byggreda.siteName}" />
		<property name="basePath" value="${byggreda.basePath}" />
	</bean>
	
	<!-- Bean configurations for Document nubering script -->
	<bean
		id="webscript.se.alingsas.alfresco.repo.scripts.documentnumbering.handlemissing.get"
		class="se.alingsas.alfresco.repo.scripts.HandleMissingDocumentNumbers" parent="webscript">
		<property name="serviceRegistry" ref="ServiceRegistry" />
		<property name="behaviourFilter" ref="policyBehaviourFilter" />
		<property name="documentNumberUtil" ref="documentNumberUtil" />
		<property name="repositoryHelper" ref="repositoryHelper" />
	</bean>
</beans>
