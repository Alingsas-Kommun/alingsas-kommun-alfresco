<?xml version='1.0' encoding='UTF-8'?>
<!-- <![CDATA[ @overridden projects/slingshot/config/alfresco/site-data/template-instances/repository.xml ]]> -->
<template-instance>
	<template-type>org/alfresco/repository</template-type>
	<components>

		<!-- Title -->
		<component>
			<region-id>title</region-id>
			<url>/components/title/simple-title</url>
			<properties>
				<title>mydocuments.title</title>
			</properties>
		</component>

		<!-- Actions -->
		<component>
			<region-id>actions-common</region-id>
			<url>/components/documentlibrary/actions-common</url>
		</component>

		<!-- Toolbar -->
		<component>
			<region-id>toolbar</region-id>
			<url>/components/documentlibrary/repo/toolbar</url>
		</component>

		<!-- Documentlist -->
		<component>
			<region-id>documentlist</region-id>
			<url>/components/documentlibrary/documentlist</url>
			<properties>
				<pagination>true</pagination>
			</properties>
		</component>

		<!-- Filter -->
		<component>
			<region-id>filter</region-id>
			<url>/components/documentlibrary/repo/filter</url>
		</component>

		<!-- Tree -->
		<component>
			<region-id>tree</region-id>
			<url>/components/documentlibrary/repo/tree</url>
		</component>

		<!-- Categories -->
		<component>
			<region-id>categories</region-id>
			<url>/components/documentlibrary/categories</url>
			<sub-components>
				<sub-component id="default">
					<evaluations>
						<evaluation id="guaranteedToHide">
							<render>false</render>
						</evaluation>
					</evaluations>
				</sub-component>
			</sub-components>
		</component>

		<!-- Tags -->
		<component>
			<region-id>tags</region-id>
			<url>/components/tag-filter</url>
			<sub-components>
				<sub-component id="default">
					<evaluations>
						<evaluation id="guaranteedToHide">
							<render>false</render>
						</evaluation>
					</evaluations>
				</sub-component>
			</sub-components>
		</component>

		<!-- Uploaders -->
		<component>
			<region-id>html-upload</region-id>
			<url>/components/upload/html-upload</url>
		</component>
		<component>
			<region-id>flash-upload</region-id>
			<url>/components/upload/flash-upload</url>
		</component>
		<component>
			<region-id>file-upload</region-id>
			<url>/components/upload/file-upload</url>
		</component>
		<component>
			<region-id>dnd-upload</region-id>
			<url>/components/upload/dnd-upload</url>
			<sub-components>
				<sub-component id="default">
					<evaluations>
						<evaluation id="guaranteedToHide">
							<render>false</render>
						</evaluation>
					</evaluations>
				</sub-component>
			</sub-components>
		</component>

		<!-- Custom Code -->
		<component>
			<region-id>doclib-custom</region-id>
			<url>/components/documentlibrary/doclib-custom</url>
		</component>

	</components>
</template-instance>
