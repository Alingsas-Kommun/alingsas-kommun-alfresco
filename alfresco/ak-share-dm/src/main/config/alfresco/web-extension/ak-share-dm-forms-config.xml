<alfresco-config>

	<!-- Anvisning -->
	<config evaluator="node-type" condition="akdm:instruction">
		<forms>
			<form>
				<field-visibility>
					<!-- Dokumentbeskrivning -->
					<show id="cm:name" />
					<show id="cm:description" />
					<show id="cm:creator" />
					<show id="cm:created" />
					<show id="cm:modifier" />
					<show id="cm:modified" />
					<show id="cm:versionLabel" />

					<show id="akdm:documentNumber" />
					<show id="akdm:documentStatus" />
					<show id="akdm:documentSecrecy" />

					<show id="akdm:protocolId" />
					<show id="akdm:instructionDecisionDate" />
					<show id="akdm:instructionGroup" />
				</field-visibility>
				<appearance>
					<set id="documentdescription" appearance="bordered-panel"
						label-id="set.akdm.documentdescription" />
					<field id="cm:name" set="documentdescription" mandatory="true" />
					<field id="cm:description" set="documentdescription" />
					<field id="cm:creator" set="documentdescription" read-only="true"
						mandatory="true" />
					<field id="cm:created" set="documentdescription" read-only="true"
						mandatory="true" />
					<field id="cm:modifier" set="documentdescription" read-only="true"
						mandatory="true" />
					<field id="cm:modified" set="documentdescription" read-only="true"
						mandatory="true" />
					<field id="cm:versionLabel" set="documentdescription"
						read-only="true" mandatory="true" />

					<field id="akdm:documentNumber" set="documentdescription"
						read-only="true" label-id="property.akdm_documentNumber" />
					<field id="akdm:documentStatus" set="documentdescription"
						mandatory="true" label-id="property.akdm_documentStatus">
						<constraint-handlers>
							<constraint type="MANDATORY" validation-handler="Alfresco.forms.validation.mandatory"
								event="change" />
						</constraint-handlers>
					</field>
					<field id="akdm:documentSecrecy" set="documentdescription"
						mandatory="true" label-id="property.akdm_documentSecrecy">
						<constraint-handlers>
							<constraint type="MANDATORY" validation-handler="Alfresco.forms.validation.mandatory"
								event="change" />
						</constraint-handlers>
					</field>

					<set id="instruction" appearance="bordered-panel" label-id="set.akdm.instruction" />
					<field id="akdm:protocolId" set="instruction" label-id="property.akdm_protocolId" />
					<field id="akdm:instructionDecisionDate" set="instruction"
						label-id="property.akdm_instructionDecisionDate" />
					<field id="akdm:instructionGroup" set="instruction"
						label-id="property.akdm_instructionGroup" />
				</appearance>
			</form>
		</forms>
	</config>

