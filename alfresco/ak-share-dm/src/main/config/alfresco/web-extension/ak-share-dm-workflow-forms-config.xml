<alfresco-config>
	<!-- NOTE: The forms with 'workflow-details' are used in the Workflow Details 
		page. -->

	<!-- Complete document workflow -->
	<config evaluator="string-compare" condition="activiti$completeDocument">
		<forms>
			<form>
				<field-visibility>
					<show id="bpm:workflowDescription" />
					<show id="packageItems" />
					<hide id="bpm:comment" />
					<hide id="bpm:sendEMailNotifications" />
					<show id="akwf:targetSite" />
					<show id="akwf:targetFolder" />
				</field-visibility>
				<appearance>
					<set id="" appearance="title" label-id="workflow.akwf.set.general" />
					<set id="target" appearance="title" label-id="workflow.akwf.set.target" />
					<set id="items" appearance="title" label-id="workflow.akwf.set.items" />
					<set id="other" appearance="title" label-id="workflow.akwf.set.other" />
					<set id="response" appearance="title" label-id="workflow.akwf.set.response" />

					<field id="bpm:workflowDescription" label-id="workflow.akwf.workflow_description"
						mandatory="true">
						<control template="/org/alfresco/components/form/controls/textarea.ftl">
							<control-param name="style">width: 95%</control-param>
						</control>
					</field>

					<field id="akwf:targetSite" set="target" mandatory="true">
						<control
							template="/se/alingsas/alfresco/share/components/form/controls/association-based-on-field.ftl">
							<control-param name="startLocation">{siteshome}</control-param>
							<control-param name="rootNode">{siteshome}</control-param>
							<control-param name="selectActionLabelId">workflow.akwf.form.control.button.select-target-site
							</control-param>
						</control>
					</field>
					<field id="akwf:targetFolder" set="target" mandatory="true">
						<control
							template="/se/alingsas/alfresco/share/components/form/controls/association-based-on-field.ftl">
							<control-param name="basedOnField">assoc_akwf_targetSite
							</control-param>
							<control-param name="selectActionLabelId">workflow.akwf.form.control.button.select-target-folder
							</control-param>
							<control-param name="selectActionFailedBasedOnFieldLabelId">workflow.akwf.form.control.button.select-target-folder-fail-site
							</control-param>
						</control>
					</field>

					<field id="packageItems" set="items" mandatory="true">
						<control
							template="/se/alingsas/alfresco/share/components/form/controls/workflow/packageitems-readonly.ftl" />
					</field>

					<field id="bpm:sendEMailNotifications" label-id="workflow.akwf.field.send-email-notifications"
						set="other">
						<control
							template="/org/alfresco/components/form/controls/workflow/email-notification.ftl" />
					</field>

					<field id="bpm:comment" set="response">
						<control template="/org/alfresco/components/form/controls/textarea.ftl" />
					</field>
				</appearance>
			</form>
		</forms>
	</config>



	<config evaluator="task-type" condition="akwf:completeDocumentReviewDocumentTask">
		<forms>
			<form>
				<field-visibility>
					<show id="bpm:workflowDescription" />
					<show id="packageItems" />
					<show id="bpm:comment" />
					<show id="message" />
					<show id="akwf:targetSite" />
					<show id="akwf:targetFolder" />
					<show id="akwf:reviewOutcome" />
				</field-visibility>
				<appearance>
					<set id="" appearance="title" label-id="workflow.akwf.set.general" />
					<set id="info" appearance=""
						template="/org/alfresco/components/form/2-column-set.ftl" />
					<set id="target" appearance="title" label-id="workflow.akwf.set.target" />
					<set id="items" appearance="title" label-id="workflow.akwf.set.items" />
					<set id="other" appearance="title" label-id="workflow.akwf.set.other" />
					<set id="response" appearance="title" label-id="workflow.akwf.set.response" />


					<field id="message" read-only="true"
						label-id="workflow.akwf.workflow_description">
						<control template="/org/alfresco/components/form/controls/info.ftl" />
					</field>

					<field id="bpm:comment" set="response">
						<control template="/org/alfresco/components/form/controls/textarea.ftl" />
					</field>


					<field id="akwf:targetSite" set="target" mandatory="true">
						<control
							template="/se/alingsas/alfresco/share/components/form/controls/association-based-on-field.ftl">
							<control-param name="disabled">true</control-param>
							<control-param name="startLocation">{siteshome}</control-param>
							<control-param name="rootNode">{siteshome}</control-param>
							<control-param name="selectActionLabelId">workflow.akwf.form.control.button.select-target-site
							</control-param>
						</control>
					</field>
					<field id="akwf:targetFolder" set="target" mandatory="true">
						<control
							template="/se/alingsas/alfresco/share/components/form/controls/association-based-on-field.ftl">
							<control-param name="basedOnField">assoc_akwf_targetSite
							</control-param>
							<control-param name="selectActionLabelId">workflow.akwf.form.control.button.select-target-folder
							</control-param>
							<control-param name="selectActionFailedBasedOnFieldLabelId">workflow.akwf.form.control.button.select-target-folder-fail-site
							</control-param>
						</control>
					</field>

					<field id="packageItems" set="items" mandatory="true">
						<control
							template="/se/alingsas/alfresco/share/components/form/controls/workflow/packageitems-readonly.ftl" />
					</field>


					<field id="akwf:reviewOutcome" label-id="workflow.akwf.field.outcome"
						set="response">
						<control
							template="/org/alfresco/components/form/controls/workflow/activiti-transitions.ftl">
							<control-param name="options">Approve|Godk√§nn#alf#Reject|Neka
							</control-param>
						</control>
					</field>
				</appearance>
			</form>
		</forms>
	</config>

	<config evaluator="task-type"
		condition="akwf:completeDocumentUserReviewResultReceiptTask">
		<forms>
			<form>
				<field-visibility>
					<show id="bpm:workflowDescription" />
					<show id="packageItems" />
					<show id="bpm:comment" />
					<show id="message" />
					<show id="akwf:targetSite" />
					<show id="akwf:targetFolder" />
					<show id="transitions" />
				</field-visibility>
				<appearance>
					<set id="" appearance="title" label-id="workflow.akwf.set.general" />
					<set id="info" appearance=""
						template="/org/alfresco/components/form/2-column-set.ftl" />
					<set id="target" appearance="title" label-id="workflow.akwf.set.target" />
					<set id="items" appearance="title" label-id="workflow.akwf.set.items" />
					<set id="other" appearance="title" label-id="workflow.akwf.set.other" />
					<set id="response" appearance="title" label-id="workflow.akwf.set.response" />


					<field id="message" read-only="true"
						label-id="workflow.akwf.workflow_description">
						<control template="/org/alfresco/components/form/controls/info.ftl" />
					</field>

					<field id="bpm:comment">
						<control template="/org/alfresco/components/form/controls/info.ftl" />
					</field>

					<field id="akwf:targetSite" set="target" read-only="true" />
					<field id="akwf:targetFolder" set="target" read-only="true" />
					<field id="packageItems" set="items" mandatory="true">
						<control
							template="/se/alingsas/alfresco/share/components/form/controls/workflow/packageitems-readonly.ftl" />
					</field>


					<field id="transitions" label-id="workflow.akwf.field.outcome"
						set="response" />
				</appearance>
			</form>
		</forms>
	</config>

	<!-- Revert document workflow -->
	<config evaluator="string-compare" condition="activiti$revertDocument">
		<forms>
			<form>
				<field-visibility>
					<show id="bpm:workflowDescription" />
					<show id="packageItems" />
					<hide id="bpm:comment" />
					<hide id="bpm:sendEMailNotifications" />
					<show id="akwf:reviewDocumentTargetChoice" />
					<hide id="akwf:targetSite" />
					<hide id="akwf:targetFolder" />
				</field-visibility>
				<appearance>
					<set id="" appearance="title" label-id="workflow.akwf.set.general" />
					<set id="target" appearance="title" label-id="workflow.akwf.set.target" />
					<set id="items" appearance="title" label-id="workflow.akwf.set.items" />
					<set id="other" appearance="title" label-id="workflow.akwf.set.other" />
					<set id="response" appearance="title" label-id="workflow.akwf.set.response" />

					<field id="bpm:workflowDescription" label-id="workflow.akwf.workflow_description"
						mandatory="true">
						<control template="/org/alfresco/components/form/controls/textarea.ftl">
							<control-param name="style">width: 95%</control-param>
						</control>
					</field>

					<field id="akwf:reviewDocumentTargetChoice" set="target"
						mandatory="true" read-only="true">
						<control
							template="/se/alingsas/alfresco/share/components/form/controls/selectone-exclusive.ftl">
						</control>
					</field>
					<field id="akwf:targetSite" set="target" mandatory="false">
						<control
							template="/se/alingsas/alfresco/share/components/form/controls/association-based-on-field.ftl">
							<control-param name="basedOnField">prop_akwf_reviewDocumentTargetChoice
							</control-param>
							<control-param name="basedOnFieldValue">site</control-param>
							<control-param name="useBasedOnFieldValueAsRoot">false</control-param>
							<control-param name="startLocation">{siteshome}</control-param>
							<control-param name="rootNode">{siteshome}</control-param>
							<control-param name="selectActionLabelId">workflow.akwf.form.control.button.select-target-site
							</control-param>
							<control-param name="selectActionFailedBasedOnFieldLabelId">workflow.akwf.form.control.button.select-target-site-fail-targetType
							</control-param>
						</control>
					</field>
					<field id="akwf:targetFolder" set="target" mandatory="false">
						<control
							template="/se/alingsas/alfresco/share/components/form/controls/association-based-on-field.ftl">
							<control-param name="basedOnField">assoc_akwf_targetSite
							</control-param>
							<control-param name="selectActionLabelId">workflow.akwf.form.control.button.select-target-folder
							</control-param>
							<control-param name="selectActionFailedBasedOnFieldLabelId">workflow.akwf.form.control.button.select-target-folder-fail-site
							</control-param>
						</control>
					</field>

					<field id="packageItems" set="items" mandatory="true">
						<control
							template="/se/alingsas/alfresco/share/components/form/controls/workflow/packageitems-readonly.ftl" />
					</field>

					<field id="bpm:sendEMailNotifications" label-id="workflow.akwf.field.send-email-notifications"
						set="other">
						<control
							template="/org/alfresco/components/form/controls/workflow/email-notification.ftl" />
					</field>

					<field id="bpm:comment" set="response">
						<control template="/org/alfresco/components/form/controls/textarea.ftl" />
					</field>
				</appearance>
			</form>
		</forms>
	</config>

